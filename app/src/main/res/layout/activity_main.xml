<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_time_alarm"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_once_data"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tanggal"/>
        <TextView
            android:id="@+id/text_once_date"
            android:text="@string/tanggal_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_once_time"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm"/>
        <TextView
            android:id="@+id/text_once_time"
            android:text="@string/waktu_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
        android:id="@+id/input_once_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/alarm_message"
        android:inputType="text"/>
    <Button
        android:id="@+id/button_set_once_alarm"
        android:text="@string/set_oone_time_alarm"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="@string/repeating_alarm"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="50dp"
            android:id="@+id/button_repeating_time"
            android:src="@drawable/ic_alarm"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_repeating_time"
            android:text="@string/alarm_time"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:inputType="text"
        android:hint="@string/alam_message"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/input_repeating_message"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:text="@string/set_repeating_alarm"
            android:layout_weight="0.5"
            android:id="@+id/button_set_repeating_alarm"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:text="@string/cance_alarm"
            android:layout_weight="0.5"
            android:id="@+id/button_cancel_repeating_alarm_main"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>